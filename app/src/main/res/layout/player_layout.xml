<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/player1imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person_24px" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Player 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/player1imageView2"
        app:layout_constraintStart_toEndOf="@+id/player1imageView2"
        app:layout_constraintTop_toTopOf="@+id/player1imageView2" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="number"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="@+id/nameTextView" />

    <ImageView
        android:id="@+id/editimageView"
        android:layout_width="29dp"
        android:layout_height="33dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:scaleType="center"
        app:layout_constraintEnd_toStartOf="@+id/deleteimageView"
        app:layout_constraintTop_toTopOf="@+id/deleteimageView"
        app:srcCompat="@drawable/edit_24px"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/deleteimageView"
        android:layout_width="29dp"
        android:layout_height="33dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="false"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/numberTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numberTextView"
        app:srcCompat="@drawable/delete_24px"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>